<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .product-item {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            max-width: 300px;
            text-align: center;
            margin: 10px;
            transition: box-shadow 0.3s ease;
        }
        .product-item h2 {
            font-size: 18px;
            color: #e74c3c;
            margin-bottom: 10px;
        }
        .product-item p {
            margin: 5px 0;
        }
        .product-item a {
            display: block;
            background-color: #f1c40f; /* Color amarillo */
            color: #fff;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }
        .product-item a:hover {
            background-color: #f39c12; /* Color amarillo más oscuro al pasar el ratón */
        }
        .product-item button {
            background-color: #2ecc71; /* Color verde */
            color: #fff;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s ease;
            width: 100%; /* Ocupa todo el ancho del contenedor */
            box-sizing: border-box; /* Incluye padding en el ancho total */
        }
        .product-item button:hover {
            background-color: #27ae60; /* Color verde más oscuro al pasar el mouse */
        }
        .pagination {
            text-align: center;
            margin-top: 20px;
        }
        .pagination a {
            color: #e74c3c;
            text-decoration: none;
            font-size: 16px;
            margin: 0 10px;
        }
        .pagination a:hover {
            text-decoration: underline;
        }
        #message {
            color: green;
            font-size: 16px;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>


    <main>
        <div id="message"></div>
        <div class="product-list">
            {{#each payload}}
                <div class="product-item">
                    <h2>{{nombre}}</h2>
                    <p>Precio: ${{precio}}</p>
                    <p>Categoría: {{categoria}}</p>
                    <p>{{descripcion}}</p>
                    
                    <!-- Botón para ver detalles del producto -->
                    <a href="/product-details/{{_id}}">Ver detalles</a>

                    <!-- Botón para agregar al carrito directamente -->
                    <form class="add-to-cart-form" action="/api/carts/add-product/{{_id}}" method="POST">
                        <button type="submit">Agregar al carrito</button>
                    </form>
                </div>
            {{/each}}
        </div>

        <!-- Paginación -->
        <div class="pagination">
            {{#if hasPrevPage}}
                <a href="{{prevLink}}">Anterior</a>
            {{/if}}

            Página {{page}} de {{totalPages}}

            {{#if hasNextPage}}
                <a href="{{nextLink}}">Siguiente</a>
            {{/if}}
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.add-to-cart-form').forEach(form => {
                form.addEventListener('submit', function(event) {
                    event.preventDefault(); // Prevent form from submitting the traditional way
                    let actionURL = this.action;

                    fetch(actionURL, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json' // Asegúrate de que esto está configurado si es necesario
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        const messageElement = document.getElementById('message');
                        if (data.success) {
                            messageElement.textContent = data.message;
                            messageElement.style.color = 'green';
                        } else {
                            messageElement.textContent = data.message;
                            messageElement.style.color = 'red';
                        }
                    })
                    .catch(error => {
                        const messageElement = document.getElementById('message');
                        messageElement.textContent = 'Error al procesar la solicitud: ' + error.message;
                        messageElement.style.color = 'red';
                    });

                });
            });
        });
    </script>
</body>
</html>
